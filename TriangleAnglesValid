#include <stdio.h>

int main() {
    float angle1, angle2, angle3; // Angles of the triangle.

    // Input the angles of the triangle
    printf("Enter the three angles of the triangle:\n");
    printf("Angle 1: ");
    scanf("%f", &angle1);
    printf("Angle 2: ");
    scanf("%f", &angle2);
    printf("Angle 3: ");
    scanf("%f", &angle3);

    // Check if the angles form a valid triangle
    if (angle1 + angle2 + angle3 == 180 && angle1 > 0 && angle2 > 0 && angle3 > 0) {
        printf("The triangle is valid.\n");
    } else {
        printf("The triangle is not valid.\n");
    }

    return 0;
}
